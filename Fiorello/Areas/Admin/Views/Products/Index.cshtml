@model List<Product>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h2 class="card-title">Products</h2>
                    <a asp-action="Create" class="btn btn-primary text-white btn-rounded"> Create </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>CategoryName</th>
                                <th>Status</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="width:100px; height:100px; object-fit:cover" src="~/img/@item.Image" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Deactive</span>

                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>

                                        }
                                    </td>

                                    <td class="d-flex justify-content-end" style="height:100%">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white btn-rounded mx-2"> Detail </a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success text-white btn-rounded mx-2"> Update </a>
                                        @if (item.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success text-white btn-rounded mx-2"> Activate</a>

                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white btn-rounded mx-2"> Deactivate </a>

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>